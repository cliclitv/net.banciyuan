<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bcy.dao.TagDao">
    <select id="getCollections" resultType="bcy.dao.Tag"> select *,users.name,users.email from
        tags LEFT JOIN users ON tags.pid = users.id where type = 0 and pid=#{uid} order by tags.id desc
        limit 0,20 </select>
    <insert id="addCollection" parameterType="bcy.dao.Tag"> insert into tags (title,pid, type) values (#{title},#{uid}, #{type}) </insert>
</mapper>